<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de Obra de Arte</title>
</head>
<body>
    <%- include('header.ejs') %>
    <h1>Agregar Nueva Obra de Arte</h1>
    <form method="POST" enctype="multipart/form-data">
        <!-- Nombre -->
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" name="nombre" required>
        <br><br>

        <!-- Año de Creación -->
        <label for="anio">Año de Creación:</label>
        <input type="number" id="anio" name="anio" required>
        <br><br>

        <!-- Tipo -->
        <label for="tipo">Tipo:</label>
        <select id="tipo" name="tipo" required>
            <option value="pintura">Pintura</option>
            <option value="escultura">Escultura</option>
        </select>
        <br><br>

        <!-- Imagen -->
        <label for="imagen">Imagen:</label>
        <input type="file" id="imagen" name="img" accept="image/*" required>
        <br><br>

        <!-- Activo -->
        <label for="activo">Activo:</label>
        <input type="checkbox" id="activo" name="activo" checked>
        <br><br>

        <!-- Botón de Enviar -->
        <button type="button" id="guardarObra">Guardar Obra</button>
    </form>

    <script src="/js/main.js"></script>
</body>
</html>
